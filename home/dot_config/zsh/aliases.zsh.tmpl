# -------------------------------
# zoxide-aware cd
# -------------------------------
zd() {
  if (( $# == 0 )); then
    builtin cd ~ && return
  elif [[ -d "$1" ]]; then
    builtin cd "$1"
  else
    z "$@" && printf " \U000F17A9 " && pwd || echo "Error: Directory not found"
  fi
}
cd() { zd "$@"; }

